{
  "name": "legal-intake-backend",
  "version": "1.0.0",
  "description": "Production-grade backend for Legal Intake Management System",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "lint": "eslint .",
    "test": "node --test"
  },
  "dependencies": {
    "@fastify/jwt": "^8.0.1",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "pg": "^8.17.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "sequelize-cli": "^6.6.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
